<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kuncham.kidseducationalapp.BodyParts"
    android:background="#ffffff">


    <ViewFlipper
        android:id="@+id/viewFlipperBody"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/body1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/body1"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/body2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/body2"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo"/>
        <ImageView
            android:id="@+id/body3_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/body3"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo"/>

    </ViewFlipper>

    <ImageView
        android:id="@+id/gohome_image"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/images"
        android:contentDescription="@string/todo"
        android:layout_marginStart="10sp"/>

    <ImageView
        android:id="@+id/prev_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="150sp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/prev"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="150sp"
        android:layout_alignParentRight="true"
        android:src="@drawable/next"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/todo"/>

</RelativeLayout>
