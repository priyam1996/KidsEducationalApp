<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kuncham.kidseducationalapp.HomePage"
    android:background="@drawable/home">


    <Button
        android:id="@+id/btn_alphabet"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="100sp"
        android:background="#66d4b9"
        android:textColor="#060606"
        android:textStyle="bold"
        android:text="@string/string_alphabet"
        android:layout_marginStart="150sp" />

    <Button
        android:id="@+id/btn_birds"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="120sp"
        android:layout_marginTop="100sp"
        android:background="#66d4b9"
        android:textColor="#060606"
        android:textStyle="bold"
        android:text="@string/string_birds"
        android:layout_alignParentRight="true" android:layout_marginEnd="130sp" />

    <Button
        android:id="@+id/btn_colors"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_alphabet"
        android:layout_marginTop="25sp"
        android:background="#66d4b9"
        android:textColor="#060606"
        android:textStyle="bold"
        android:layout_alignStart="@id/btn_alphabet"
        android:layout_alignLeft="@id/btn_alphabet"
        android:text="@string/string_colors"/>

    <Button
        android:id="@+id/btn_body"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btn_birds"
        android:layout_alignStart="@id/btn_birds"
        android:layout_below="@id/btn_birds"
        android:layout_marginTop="25sp"
        android:background="#66d4b9"
        android:textColor="#060606"
        android:textStyle="bold"
        android:text="@string/string_body" />

    <Button
        android:id="@+id/btn_numbers"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_colors"
        android:layout_marginTop="25dp"
        android:background="#66d4b9"
        android:textColor="#060606"
        android:textStyle="bold"
        android:layout_alignStart="@id/btn_alphabet"
        android:layout_alignLeft="@id/btn_alphabet"
        android:text="@string/string_numebrs" />

    <Button
        android:id="@+id/btn_information"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btn_birds"
        android:layout_alignStart="@id/btn_birds"
        android:layout_below="@id/btn_body"
        android:background="#66d4b9"
        android:textColor="#060606"
        android:textStyle="bold"
        android:layout_marginTop="25sp"
        android:text="@string/string_information" />
</RelativeLayout>
