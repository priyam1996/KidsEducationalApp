<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kuncham.kidseducationalapp.Numbers"
    android:background="#ffffff">

    <ViewFlipper
        android:id="@+id/viewFlipperNumber"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/number1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/one"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/number2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/number3_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/three"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/number4_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/four"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/number5_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/five"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/number6_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/six"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/number7_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/seven"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo"/>
        <ImageView
            android:id="@+id/number8_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eight"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo"/>
        <ImageView
            android:id="@+id/number9_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nine"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo"/>
        <ImageView
            android:id="@+id/number10_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ten"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo"/>


    </ViewFlipper>

    <ImageView
        android:id="@+id/gohome_image"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/images"
        android:contentDescription="@string/todo"
        android:layout_marginStart="10sp"/>

    <ImageView
        android:id="@+id/prev_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="150sp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/todo"
        android:src="@drawable/prev" android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="150sp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/todo"
        android:src="@drawable/next" android:layout_alignParentEnd="true"/>


</RelativeLayout>
