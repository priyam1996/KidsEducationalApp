<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kuncham.kidseducationalapp.Birds"
    android:background="#ffffff">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/chart1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chart1"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/chart2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chart2"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/chart3_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chart3"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/chart4_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chart4"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/chart5_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chart5"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"/>

    </ViewFlipper>

    <ImageView
        android:id="@+id/gohome_image"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/images"
        android:contentDescription="@string/todo"
        android:layout_marginStart="10sp"/>

    <ImageView
        android:id="@+id/prev_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="150sp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/todo"
        android:src="@drawable/prev"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="150sp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/todo"
        android:src="@drawable/next"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
